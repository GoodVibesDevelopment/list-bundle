{% if action is defined and action is not null %}
<a href="{{ path(action.path, action.parameters) }}">
    {% endif %}

    {% if isDate %}
        {% if format is defined and format is not null %}
            {{ property|date(format) }}
        {% else %}
            {{ property|date("m/d/Y") }}
        {% endif %}
    {% elseif isImage is defined and isImage %}
        <img src="{{ property }}"/>
    {% elseif raw is defined and raw %}
        {{ property|raw }}
    {% else %}
        {{ property }}
    {% endif %}

    {% if action is defined and action is not null %}
</a>
{% endif %}